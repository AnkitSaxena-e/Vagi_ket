<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/smoke"
                android:centerX="0.9"
                android:endColor="@color/gray"
                android:startColor="@color/white" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:left="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/smoke"
                android:centerX="0.9"
                android:endColor="@color/gray"
                android:startColor="@color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:left="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:centerColor="@color/smoke"
                android:centerX="0.9"
                android:endColor="@color/gray"
                android:startColor="@color/white" />
        </shape>
    </item>

    <item android:left="40dp"
        android:right="40dp"
        android:bottom="90dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@color/smoke"
                android:centerX="0.9"
                android:endColor="@color/gray"
                android:startColor="@color/white" />
        </shape>
    </item>

    <item android:top="40dp"
            android:bottom="40dp"
            android:left="40dp"
            android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>

</layer-list>