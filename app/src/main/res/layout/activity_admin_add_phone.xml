    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/svv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:orientation="horizontal"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/PicPhoto1"
                        android:layout_width="305dp"
                        android:layout_height="290dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/select_product_image" />

                    <ImageView
                        android:id="@+id/PicPhoto2"
                        android:layout_width="305dp"
                        android:layout_height="290dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/PicPhoto1"
                        android:src="@drawable/select_product_image" />
                </RelativeLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upload_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/svv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/ButtonIm"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_list"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/joinbutton"
            android:gravity="center"
            android:padding="10sp"
            android:text="Add Pictures"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal|bold|italic" />

