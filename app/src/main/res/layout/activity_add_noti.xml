<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNotiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:maxHeight="100dp"
            android:src="@drawable/select_product_image"
            android:id="@+id/noImage"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_margin="@dimen/dp_10"
            android:hint="Notification"
            android:textSize="16dp"
            android:background="@drawable/loginbutton"
            android:id="@+id/noText"
            android:layout_below="@+id/noImage"
            android:gravity="center"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Add"
            android:textSize="@dimen/dp_20"
            android:background="@drawable/joinbutton"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/noText"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/noAdd"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="See Notifications"
        android:textSize="@dimen/dp_20"
        android:background="@drawable/joinbutton"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/fff"
        android:layout_marginTop="50dp"
        android:id="@+id/SeeNoti"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>