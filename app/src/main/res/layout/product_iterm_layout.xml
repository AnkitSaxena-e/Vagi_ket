<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="5sp"
    android:background="@drawable/card_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/address_show_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/Product_Image_II_PPPP"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/lplplplp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Product_Name_II_PPPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Product Name"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Product_Price_II_PPPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_Name_II_PPPP"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Product Price"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/lplplplp">

            <TextView
                android:id="@+id/Snr_PP_BBBB_II_PPPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                android:text="S/R"
                android:textSize="13dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/nnoonnee"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:paddingStart="5dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/main_back"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Snr_PP_BBBB_II_PPPP"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/Color_PP_BBBB_II_PPPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/nnoonnee"
                android:text="Color"
                android:textSize="13dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/nnoonnee2"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:paddingStart="5dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/main_back"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Color_PP_BBBB_II_PPPP"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="italic|bold" />

            <RelativeLayout
                android:id="@+id/ghgh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/nnoonnee2"
                android:backgroundTint="#4B8B3B">

                <TextView
                    android:id="@+id/setDasiReading_PS_II_PPPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="4.3"
                    android:textSize="13dp"
                    android:textStyle="italic|bold" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/setDasiReading_PS_II_PPPP"
                    android:src="@drawable/ic_baseline_star_24" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>