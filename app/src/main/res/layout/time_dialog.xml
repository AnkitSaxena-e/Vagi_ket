<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dp_10"
    android:padding="2dp"
    android:background="@drawable/_nlextra_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:textSize="20dp"
        android:padding="@dimen/dp_10"
        android:textStyle="bold"
        android:id="@+id/te"
        android:textColor="@color/white"
        android:background="@color/dialogColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/df"
        android:padding="@dimen/dp_10"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_below="@+id/te">

        <NumberPicker
            android:layout_width="93.3dp"
            android:layout_height="70dp"
            android:layout_weight="30"
            android:layout_marginTop="7dp"
            android:id="@+id/Hour_Picker"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="10"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text=":"
            android:textSize="55dp"/>

        <NumberPicker
            android:layout_width="93.3dp"
            android:layout_height="70dp"
            android:layout_weight="30"
            android:layout_marginTop="7dp"
            android:id="@+id/Minute_Picker"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="35"
            android:gravity="center"
            android:textColor="@color/gray"
            android:id="@+id/time_AP"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back_profile"
            android:text="AM"
            android:textSize="25dp"/>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/df"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/Set_Time"
        android:text="Set"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/join_back_two"/>

</RelativeLayout>