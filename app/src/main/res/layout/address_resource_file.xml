<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:id="@+id/addressCard"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:background="@drawable/address_show_background"
    android:layout_marginRight="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resourseName"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:textStyle="italic"
        android:text="Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resourseName"
        android:text="Address"
        android:layout_marginStart="5dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:id="@+id/resourseAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/resourseAddress"
        android:text="Number"
        android:id="@+id/resourseNumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resourseAddress"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:text="Pin"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/resoursePin"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@drawable/boycover_a"
        android:padding="5dp"
        android:id="@+id/resourseEdit"
        android:textSize="13sp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:padding="5dp"
        android:id="@+id/resourseRemove"
        android:gravity="center"
        android:background="@drawable/boycover_a"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textSize="13sp"
        android:layout_toStartOf="@+id/resourseEdit"/>

    </RelativeLayout>

</RelativeLayout>